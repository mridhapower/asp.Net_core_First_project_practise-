@model IEnumerable<FirstCode_Models.Product>



<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Application Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="10%">@obj.Price</td>
                    <td width="15%">@obj.Category.Name</td>
                    <td width="15%">@obj.ApplicationType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-grp" role="group">
                            <a asp-controller="Product" asp-route-id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>Edit
                            </a>
                            <a asp-controller="Product" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exists</p>
    }
</div>

@model IEnumerable<FirstCode_Models.Category>



<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; New Category
            </a>
        </div>
    </div>
    <br /><br />
        @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>Dispaly Order</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                        {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td class="text-center">
                                <div class="w-75 btn-grp" role="group">
                                    <a asp-controller="Category" asp-route-id="@obj.Id"  asp-action="Edit" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i>Edit
                                    </a>
                                    <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        <i class="fas fa-trash-alt"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Category Exists</p>
            }
</div>
